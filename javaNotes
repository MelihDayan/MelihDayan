package com.meliiii.main;

public class Main {

    public static void main (String[] args) {

        //Variables (Degiskenler)


        //Int (Integer/Tam sayi)

      int x = 20;
      int y = 10;
        System.out.println(x*y);


        // Double - Float (Kesirli ve ondali sayilar)

        double a = 5.0;
        double b = 11.0;
        System.out.println(b/a);

        //Ornek;
        double pi = 3.14;
        int r = 5;
        System.out.println(2*pi*5);


        // String (Metin Degiskenleri)

      String name = "Gizem";
      String surname = "Dayan";

      String fullname = name +" "+ surname;

      //Bosluk icin +" "+ yap

      System.out.println(name);
      System.out.println(surname);
      System.out.println(fullname);

      //Boolean (Dogru yada Yanlis)

      boolean isAlive = true;
      isAlive = false;
      System.out.println(isAlive);

      //Final (Birseyin degeri sonradan degismesin istiyorsak)

      final int myInteger = 5;

      System.out.println(myInteger);

    }

}
